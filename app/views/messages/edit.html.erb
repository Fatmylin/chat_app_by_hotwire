<h1>Edit Message</h1>
<%= turbo_frame_tag "edit_messages_#{@message.id}" do%>
  <%= form_with(
    model: [@message.room, @message],
    data: { 
      controller: 'reset-form',
      action: 'turbo:submit-end->reset-form#reset'
    }
  ) do |form|%>
    <div class="field">
      <%= form.text_field :content %>    
      <%= form.submit %>
    </div>
  <% end %>
<% end %>

<%= link_to 'Back', @message.room %>